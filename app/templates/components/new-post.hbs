{{yield}}
{{#if addNewPost}}
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL:</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="blog">Thoughts:</label>
        {{input value=blog id="blog"}}
      </div>
      <button class="btn-success" {{action 'save1'}}>Save Post</button>
    </form>
  </div>
{{else}}
  <button class="btn-primary btn-lg" {{action 'postFormShow'}}>Add New Post</button>
{{/if}}
