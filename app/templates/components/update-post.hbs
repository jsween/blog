{{yield}}
{{#if updatePostForm}}
  <h4>Maximum Effort</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="image">Image URL:</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <div class="form-group">
        <label for="blog">Thoughts:</label>
        {{input value=blog id="blog" placeholder=post.blog}}
      </div>
      <button class="btn-success" {{action 'update' post}}>Update</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning" {{action 'updatePostForm'}}>Update Post</button>
{{/if}}
